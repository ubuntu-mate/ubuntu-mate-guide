            <tgroup cols="1">
              <colspec colwidth="100%"/>
                <tbody>
                  <row><entry><mediaobject>
                    <imageobject>
                      <imagedata fileref="figures/print-pdf.png" contentwidth="100%"/>
                    </imageobject>
                    <textobject>
                      Print to PDF.
                    </textobject>
                  </mediaobject></entry></row>
                </tbody>
            </tgroup>
          </informaltable>
